@{
    int total = Model.TotalPaginas;
    int current = Model.Pagina;

    // Ventana de páginas alrededor de la actual
    int window = 2;
    int start = Math.Max(2, current - window);
    int end = Math.Min(total - 1, current + window);

    string BuildUrl(int p) => Url.Action("Index", "Jugadores", new
    {
        buscar = Model.Buscar,
        arquetipo = Model.Arquetipo,
        posicion = Model.Posicion,
        elemento = Model.Elemento,
        rol = Model.Rol,
        orden = Model.Orden,
        pagina = p
    })!;
}

@if (Model.TotalPaginas > 1)
{
    <nav aria-label="Paginación" style="margin-top:16px;">
        <ul class="pagination">

            <!-- Anterior -->
            <li class="page-item @(current == 1 ? "disabled" : "")">
                <a class="page-link" href="@(current == 1 ? "#" : BuildUrl(current - 1))">‹</a>
            </li>

            <!-- Primera -->
            <li class="page-item @(current == 1 ? "active" : "")">
                <a class="page-link" href="@BuildUrl(1)">1</a>
            </li>

            <!-- ... si hace falta -->
            @if (start > 2)
            {
                <li class="page-item disabled"><span class="page-link">…</span></li>
            }

            <!-- Páginas intermedias -->
            @for (int p = start; p <= end; p++)
            {
                <li class="page-item @(p == current ? "active" : "")">
                    <a class="page-link" href="@BuildUrl(p)">@p</a>
                </li>
            }

            <!-- ... si hace falta -->
            @if (end < total - 1)
            {
                <li class="page-item disabled"><span class="page-link">…</span></li>
            }

            <!-- Última (si total > 1) -->
            <li class="page-item @(current == total ? "active" : "")">
                <a class="page-link" href="@BuildUrl(total)">@total</a>
            </li>

            <!-- Siguiente -->
            <li class="page-item @(current == total ? "disabled" : "")">
                <a class="page-link" href="@(current == total ? "#" : BuildUrl(current + 1))">›</a>
            </li>

        </ul>
    </nav>

    <div style="margin-top:8px;">
        Mostrando @((current - 1) * Model.TamPagina + 1)
        –
        @(Math.Min(current * Model.TamPagina, Model.TotalFiltrados))
        de @Model.TotalFiltrados
    </div>
}

